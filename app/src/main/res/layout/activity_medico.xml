<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_medicocover"
        android:src="@drawable/medico_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titulo_agendamedico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Â¡Agenda tu cita Online!"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nombre_agendamedico"
            android:layout_width="wrap_content"
            android:layout_below="@id/titulo_agendamedico"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:text="Escribe tu Nombre"/>

        <EditText
            android:id="@+id/txtnombre_agendamedico"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/titulo_agendamedico"
            android:layout_marginStart="30dp"
            android:layout_marginTop="31dp"
            android:layout_toRightOf="@+id/nombre_agendamedico"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/correo_agendamedico"
            android:layout_width="wrap_content"
            android:layout_below="@id/titulo_agendamedico"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="30dp"
            android:text="Escribe tu Correo"/>

        <EditText
            android:id="@+id/txtcorreo_agendamedico"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/titulo_agendamedico"
            android:layout_marginStart="30dp"
            android:layout_marginTop="82dp"
            android:layout_toRightOf="@+id/nombre_agendamedico"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/edad_agendanutri"
            android:layout_width="wrap_content"
            android:layout_below="@id/titulo_agendamedico"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="30dp"
            android:text="Escribe tu Edad"/>

        <EditText
            android:id="@+id/txtedad_agendamedico"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/titulo_agendamedico"
            android:layout_marginStart="30dp"
            android:layout_marginTop="132dp"
            android:layout_toRightOf="@+id/nombre_agendamedico"
            android:inputType="number" />

        <Button
            android:id="@+id/btnAgendaCita"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/txtedad_agendamedico"
            android:layout_below="@id/txtedad_agendamedico"
            android:layout_marginTop="30dp"
            android:onClick="btnProfesional"
            android:text="@string/btn_agenda_cita"/>


    </RelativeLayout>

</FrameLayout>